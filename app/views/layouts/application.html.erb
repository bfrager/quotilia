<!DOCTYPE html>
<html>
<head>
  <title>Quotilia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <h6> <%= current_user.email %> </h6>
    <h6> <%= link_to 'Logout', logout_path, method: :delete, data: {confirm: 'Are you sure?'} %> </h6>
  <% else %>
    <h6> <%= link_to 'Login', login_path %> </h6>
  <% end %>

  <% flash.each do |name, message| %>
    <div class="alert alert-info flash-message flash-message-<%= name %>">
      <%= message %>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>

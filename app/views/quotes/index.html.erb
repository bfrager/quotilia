<h1>Quotilia</h1>
<div class="transitions-enabled" id="quotes">
<% @quotes.each do |n| %>
  <div class="box panel panel-default">
    <div class="quote">
      <div class="content">
        <%= n.content %>
      </div>
      <div class="panel-body">
          <div class="quoters">
            Quoted by
            <% n.users.each do |p| %>
              <div class="quoter">
                <%= "#{p.f_name} #{p.l_name}" %>
              </div>
            <% end %>
          </div>
        <%= link_to "Details", quote_path(n) %>
        <%= link_to "Edit", edit_quote_path(n) %>
        <%= link_to "Delete", quote_path(n), method: :delete, data: {confirm: "Are you sure? Such a shame when knowledge is wasted..."} %>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= form_for @quote do |f| %>
  <%= f.label :Quote %>
  <%= f.text_area :content %>
  <%= f.fields_for :creator do |c| %>
    <%= c.label :Creator %>
    <%= c.text_field :creator %>
  <% end %>
  <%= f.fields_for :source do |s| %>
    <%= s.label :Source %>
    <%= s.text_field :source %>
  <% end %>
  <%= f.submit %>
<% end %>

<h1>Posts</h1>
<div class="transitions-enabled" id="posts">
<% @posts.each do |post| %>
  <div class="box panel panel-default">
    <%= link_to (image_tag post.image.url), post %>
    <div class="panel-body">

      <h2><%= link_to post.description, post  %></h2>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post, method: :delete, data: {confirm: "Are you sure? Such a shame when knowledge is wasted..."} %>

    </div>
  </div>
<% end %>
</div>
